@{
	ViewData["Title"] = "Abbreviations";
}

<div class="container text-center">
	<div class="row">
		<div class="col-6">
			<form asp-controller="Home" method="post">
				<h2 class="text-light">Enter Abbreviations</h2>
				<input class="form-control" type="text" name="Abbreviations" placeholder="Search for abbreviation or acronym" />
				<br /><button type="submit" class="btn btn-info">Check</button>
			</form>
		</div>
	</div>
</div>

@if(Model != null)
{
	<button type="button" class="btn btn-sm btn-dark" data-bs-toggle="popover" 
	data-bs-title=@Model.Id 
	data-bs-content=@Model.Definition>@Model.Term</button>
}



